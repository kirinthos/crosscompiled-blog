{
  "name": "crosscompiled-blog",
  "version": "1.0.0",
  "description": "A static blog site built with Next.js and markdown support",
  "scripts": {
    "dev": "next dev",
    "dev:watch": "node scripts/dev-watch.js",
    "build": "node scripts/generate-sitemap.js && next build",
    "start": "npx serve@latest out",
    "export": "node scripts/generate-sitemap.js && next build",
    "lint": "next lint",
    "preview": "npm run build && npx serve@latest out",
    "clear-cache": "node scripts/clear-cache.js",
    "sitemap": "node scripts/generate-sitemap.js"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "gray-matter": "^4.0.3",
    "mermaid": "^11.10.1",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.0",
    "rehype-katex": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-rehype": "^11.1.2",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "chokidar": "^3.6.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  }
}
